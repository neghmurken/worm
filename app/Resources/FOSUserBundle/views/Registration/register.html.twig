{% extends 'WormSiteBundle::layout.html.twig' %}

{% block container %}
    {% trans_default_domain 'FOSUserBundle' %}

    <div class="row-fluid">
        <div class="span6 offset3">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
                  class="fos_user_registration_register well">

                <h2>Register</h2>

                <div>
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, {'attr': {'class': 'span12'}}) }}
                    {{ form_errors(form.username) }}
                </div>

                <div>
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'span12'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div>
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'span12'}}) }}
                </div>

                <div>
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'span12'}}) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>

                {{ form_rest(form) }}
                <button type="submit" class="btn btn-primary btn-large btn-block">{{ 'registration.submit'|trans }}</button>
            </form>
        </div>
    </div>

{% endblock %}
