<div class="navbar-inner">
    <a class="brand" href="{{ path('wormsite_home_index') }}">{{ title }}</a>

    <ul class="nav pull-right">
        {% if is_granted('ROLE_USER') %}
            <li class="dropdown" id="account-menu">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#account-menu">
                    <i class="icon-user"></i>&nbsp;{{ app.user.username }}&nbsp;<b class="caret"></b>
                </a>

                <ul class="dropdown-menu">
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}">
                            <i class="icon-off"></i>&nbsp;Logout
                        </a>
                    </li>
                </ul>
            </li>
        {% else %}
            <li>
                <a href="{{ path('fos_user_registration_register') }}">Sign up</a>
            </li>
            <li class="dropdown" id="login-form">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#login-form">
                    Log in&nbsp;<b class="caret"></b>
                </a>

                <div class="dropdown-menu">
                    {{ render(controller('WormSiteBundle:Security:login')) }}
                </div>
            </li>
        {% endif %}
    </ul>
</div>