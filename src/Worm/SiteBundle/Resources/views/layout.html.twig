{% extends '::base.html.twig' %}

{% block title %}Worm{% endblock %}

{% block stylesheets %}
    {% stylesheets filter='cssrewrite'
    'bundles/wormsite/bootstrap/css/bootstrap.min.css'
    'bundles/wormsite/bootstrap/css/bootstrap-responsive.min.css'
    'bundles/wormsite/css/*' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
    'bundles/wormsite/js/vendors/jquery.min.js'
    'bundles/wormsite/bootstrap/js/bootstrap.min.js'
    'bundles/wormsite/js/worm.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    {% include 'WormSiteBundle:Snippets:_navbar.html.twig' with {'title': block('title')} %}

    <div class="container">
        {% block container %}
        {% endblock %}
    </div>

    <footer>

    </footer>
{% endblock %}